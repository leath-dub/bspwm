(defwidget left []
  (desktops))

(defwidget center []
  "")

(defwidget right []
  (box :orientation "v" :spacing 10 :space-evenly false :valign "end" (bspwm-hide) (time) (battery) (divider :height 2) (bspwm-layout)))

(defwidget bar-left []
  (centerbox :orientation "v" (left) (center) (right)))

(defwindow bar-left
  :monitor 0
  :windowtype "dock"
  :stacking "bg"
  :geometry (geometry
              :x "0%"
              :y "0%"
              :width "0%"
              :height "85%"
              :anchor "left center")
  :wm-ignore false
  (bar-left))
